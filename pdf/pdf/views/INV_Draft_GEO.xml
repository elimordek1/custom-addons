<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <template id="report_delivery_act_geo">
      <t t-call="web.html_container">
          <t t-foreach="docs" t-as="doc">
              <t t-call="web.basic_layout">
                  <!-- Header with Logo -->
                  <div class="header text-center">
                      <img src="/pdf/static/description/Peugeot-Logo.png" style="max-width: 100px;"/>
                      <h3>PEUGEOT GEORGIA</h3>
                  </div>

                  <!-- Title -->
                  <div class="text-center mb-4">
                      <h4>მიღება-ჩაბარების აქტი</h4>
                  </div>

                  <!-- Document Info -->
                  <div class="row mb-4">
                      <div class="col">
                          <strong>თარიღი:</strong> <span t-field="doc.date_order"/>
                      </div>
                      <div class="col">
                          <strong>ნომერი:</strong> <span t-field="doc.name"/>
                      </div>
                  </div>

                  <!-- Vehicle Table -->
                  <div class="vehicle-table" style="margin-top: 20px;">
                      <table style="width: 100%; border-collapse: collapse;">
                          <thead>
                              <tr style="border-bottom: 2px solid #000;">
                                  <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">ავტომობილის
  მოდელი</th>
                                  <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">ვინ
  კოდი</th>
                                  <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">გამოშვების
  წელი</th>
                                  <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">ექსტერიერის
  ფერი</th>
                                  <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">ძრავის
  მოცულობა</th>
                                  <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">ღირე
  ბულება </th>
                              </tr>
                          </thead>
                          <tbody>
                              <tr t-foreach="doc.order_line" t-as="line">
                                  <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                      <span t-field="doc.car_id.model_id.brand_id.name"/>
                                      <span t-field="doc.car_id.model_id.name"/>
                                      <t t-if="not doc.car_id.model_id.brand_id.name and not doc.car_id.model_id.name">&#160;</t>
                                  </td>
                                  <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                      <span t-field="doc.car_id.x_studio_vinnumber"/>
                                      <t t-if="not doc.car_id.x_studio_vinnumber">&#160;</t>
                                  </td>
                                  <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                        <span t-esc="str(doc.car_id.model_id.model_year).replace(',', '')"/>
                                        <t t-if="not doc.car_id.model_id.model_year">&#160;</t>
                                  </td>
                                  <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                      <span t-field="doc.car_id.color"/>
                                      <t t-if="not doc.car_id.color">&#160;</t>
                                  </td>
                                  <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                      <span t-field="doc.car_id.x_studio_engine_size"/>
                                      <t t-if="not doc.car_id.x_studio_engine_size">&#160;</t>
                                  </td>
                                  <td style="padding: 8px; border-bottom: 1px solid #ddd; text-align: right;">
                                      ₾ <span t-field="line.price_unit"/>
                                      <t t-if="not line.price_unit">&#160;</t>
                                  </td>
                              </tr>
                          </tbody>
                          <tfoot>
                              <tr>
                                  <td colspan="4" style="border: none;">&#160;</td>
                                  <td style="padding: 8px; text-align: right; font-weight: bold;">ბალანსი :</td>
                                  <td style="padding: 8px; text-align: right;">
                                      <span t-field="doc.currency_id.symbol"/>
                                      <span t-field="doc.x_studio_related_field_4is_1ijgac036"/>
                                  </td>
                              </tr>
                              <tr>
                                  <td colspan="4" style="border: none;">&#160;</td>
                                  <td style="padding: 8px; text-align: right; font-weight: bold;">ჯამური გადასახდელი თანხა :</td>
                                  <td style="padding: 8px; text-align: right;">
                                      <span t-field="doc.currency_id.symbol"/>
                                      <span t-field="doc.amount_total"/>
                                  </td>
                              </tr>
                          </tfoot>
                      </table>
                  </div>

                  <!-- Bank Details -->
                  <div class="mt-4">
                      <table style="width: 100%; border-collapse: collapse;">
                          <tr>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>დასახელება:</strong> შპს ნოვკომი
                              </td>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>საიდენტიფიკაციო კოდი:</strong> 404535614
                              </td>
                          </tr>
                          <tr>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>ბანკი:</strong> სს "თიბისი ბანკი"
                              </td>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>ბანკი:</strong> სს "საქართველოს ბანკი"
                              </td>
                          </tr>
                          <tr>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>ბანკის კოდი:</strong> TBCBGE22
                              </td>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>ბანკის კოდი:</strong> BAGAGE22
                              </td>
                          </tr>
                          <tr>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>ანგარიში:</strong> GE42TB7364236020100014
                              </td>
                              <td style="padding: 8px; border: 1px solid #ddd;">
                                  <strong>ანგარიში:</strong> GE54BG0000000580810424
                              </td>
                          </tr>
                      </table>
                  </div>

                  <!-- Signatures -->
                  <div class="row mt-4">
                      <div class="col">კლიენტი ----------</div>
                      <div class="col text-right">სერვის პროვაიდერი ----------</div>
                  </div>

                  <!-- Footer -->
                  <div class="footer text-center">
                      <p>პეჟოს გუნდი გიხდით მადლობას პეჟოს არჩევისთვის</p>
                      <p>აღმაშენებლის ხეივანი 100, 0131 თბილისი | საქართველო +995 (32) 2 19 21 95, info@peugeot-georgia.ge</p>
                  </div>
              </t>
          </t>
      </t>
  </template>
</odoo>
