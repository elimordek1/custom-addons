<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_peugeot_geo">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <div class="invoice-container" style="width: 100%; margin: 0; padding: 0; font-family: Arial, sans-serif;">
                        <!-- Header Section -->
                        <div class="invoice-header" style="display: flex; align-items: center; justify-content: space-between; border-bottom: 2px solid #000; padding-bottom: 10px;">
                            <img class="logo-img" src="/pdf/static/description/Peugeot-Logo.png" alt="Logo" style="max-height: 60px; max-width:60px" />
                            <span class="company-name" style="font-size: 20px; font-weight: bold;">PEUGEOT GEORGIA</span>
                        </div>

                        <!-- Invoice Number -->
                        <div class="invoice-title" style="margin-top: 10px;">
                            <span class="invoice-label" style="font-weight: bold;">ინვოისი №</span>
                            <span class="invoice-number" t-field="doc.name"/>
                        </div>

                        <!-- Date Section -->
                        <div class="invoice-date" style="margin-top: 10px;">
                            <div><span class="label" style="font-weight: bold;">თარიღი:</span> <span t-field="doc.date_order"/></div>
                            <div><span class="label" style="font-weight: bold;">შეკვეთის N:</span> <span t-field="doc.name"/></div>
                            <div><span class="label" style="font-weight: bold;">მოქმედების ვადა:</span> <span t-field="doc.validity_date"/></div>
                        </div>

                        <!-- Customer Information -->
                        <div class="customer-info" style="margin-top: 10px;">
                            <span class="section-title" style="font-weight: bold;">მყიდველი:</span>
                            <div><span class="label" style="font-weight: bold;">პ/ნ:</span> <span t-field="doc.partner_id.vat"/></div>
                            <div><span class="label" style="font-weight: bold;">მისამართი:</span> <span t-field="doc.partner_id.street"/></div>
                            <div><span class="label" style="font-weight: bold;">ტელეფონის ნომერი:</span> <span t-field="doc.partner_id.phone"/></div>
                        </div>

                        <!-- Vehicle Table Structure -->
                        <div class="vehicle-table" style="margin-top: 20px;">
                            <table style="width: 100%; border-collapse: collapse;">
                                <thead>
                                    <tr style="border-bottom: 2px solid #000;">
                                        <th colspan="3">ავტომობილის მოდელი</th>
                                        <th>საიდენტიფიკაციო კოდი</th>
                                        <th>გამოშვების წელი</th>
                                        <th>ექსტერიერის ფერი</th>
                                        <th>ძრავის მოცულობა</th>
                                        <th colspan="2">ღირებულება</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="doc.order_line" t-as="line">
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span > brand </span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span> product id model </span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span > product id trim</span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span t-if="line.product_id.default_code" t-field="line.product_id.default_code"/>
                                            <span t-if="not line.product_id.default_code"> </span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span > product id year </span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span t-if="line.product_id.color" t-field="line.product_id.color"/>
                                            <span t-if="not line.product_id.color"> </span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span> product id engine size </span>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span t-field="doc.currency_id.symbol"/>
                                        </td>
                                        <td style="border-bottom: 1px solid #ddd;">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                    </tr>

                                    <tr class="empty-row">
                                        <td colspan="7"></td>
                                        <td style="font-weight: bold;">ავანსი</td>
                                        <td class="price">
                                            <span t-field="doc.currency_id.symbol"/>
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                    <tr class="total-row">
                                        <td colspan="7"></td>
                                        <td style="font-weight: bold;">ჯამური გადასახდელი თანხა</td>
                                        <td class="price">
                                            <span t-field="doc.currency_id.symbol"/>
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="payment-note" style="margin-top: 10px; font-size: 12px;">
                            ანგარიშსწორება წარმოებს ეროვნულ ვალუტაში, გადახდის დღეს მოქმედი ეროვნული ბანკის ოფიციალური კურსით.
                        </div>

                        <div class="customs-note" style="margin-top: 5px; font-size: 12px;">
                            ღირებულებაში შედის განბაჟების და გაფორმების ხარჯები
                        </div>

                        <!-- Company and Bank Information Table -->
                        <div class="company-bank-info" style="margin-top: 20px;">
                            <table style="width: 100%; border-collapse: collapse;">
                                <tbody>
                                    <tr>
                                        <td><span class="label" style="font-weight: bold;">დასახელება:</span></td>
                                        <td><span>შპს ნოვკომ</span></td>
                                    </tr>
                                    <tr>
                                        <td><span class="label" style="font-weight: bold;">პ/ნ:</span></td>
                                        <td><span>404535614</span></td>
                                    </tr>
                                    <tr>
                                        <td><span class="label" style="font-weight: bold;">ბანკი:</span></td>
                                        <td><span>ს.ს. "თიბისი ბანკი"</span></td>

                                        <td><span>სს "საქართველოს ბანკი"</span></td>
                                    </tr>
                                    <tr>
                                        <td><span class="label" style="font-weight: bold;">ბანკის კოდი:</span></td>
                                        <td><span>TBCBGE22_GEL</span></td>

                                        <td><span>BAGAGE22</span></td>
                                    </tr>
                                    <tr>
                                        <td><span class="label" style="font-weight: bold;">IBAN:</span></td>
                                        <td><span>GE42TB7364236020100014</span></td>

                                        <td><span>GE54BG0000000580810424</span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div style="margin-top: 30px; text-align: center; font-size: 11px; width: 100%;">
                            <span style="display: block;">დირექტორი: /თორნიკე კიკნაველიძე/</span>
                            <span style="display: block; margin-top: 10px;">მადლობა, რომ ირჩევთ პეჟოს</span>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
