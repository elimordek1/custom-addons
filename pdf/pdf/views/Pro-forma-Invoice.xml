<?xml version="1.0" encoding="UTF-8"?>
<odoo>
       <template id="report_delivery_act_eng">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <!-- Header with Logo -->
                    <div class="header text-center">
                        <img src="/pdf/static/description/Peugeot-Logo.png" style="max-width: 100px;"/>
                        <h3>PEUGEOT GEORGIA</h3>
                    </div>

                    <!-- Title -->
                    <div class="text-center mb-4">
                        <h4>Receipt-Delivery Act</h4>
                    </div>

                    <!-- Document Info -->
                    <div class="row mb-4">
                        <div class="col">
                            <strong>Date:</strong> <span t-field="doc.date_order"/>
                        </div>
                        <div class="col">
                            <strong>Number:</strong> <span t-field="doc.name"/>
                        </div>
                    </div>

                    <!-- Vehicle Table -->
                    <div class="vehicle-table" style="margin-top: 20px;">
                        <table style="width: 100%; border-collapse: collapse;">
                            <thead>
                                <tr style="border-bottom: 2px solid #000;">
                                    <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">Automobile
    Model</th>
                                    <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">VIN
    Code</th>
                                    <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">Release
    Year</th>
                                    <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">Exterior
    Color</th>
                                    <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">Engine
    Size</th>
                                    <th style="padding: 8px; white-space: pre-line; vertical-align: bottom;">Price
    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.order_line" t-as="line">
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                        <span t-field="doc.car_id.model_id.brand_id.name"/>
                                        <span t-field="doc.car_id.model_id.name"/>
                                        <t t-if="not doc.car_id.model_id.brand_id.name and not doc.car_id.model_id.name">&#160;</t>
                                    </td>
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                        <span t-field="doc.car_id.x_studio_vinnumber"/>
                                        <t t-if="not doc.car_id.x_studio_vinnumber">&#160;</t>
                                    </td>
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                        <span t-esc="str(doc.car_id.model_id.model_year).replace(',', '')"/>
                                        <t t-if="not doc.car_id.model_id.model_year">&#160;</t>
                                    </td>
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                        <span t-field="doc.car_id.color"/>
                                        <t t-if="not doc.car_id.color">&#160;</t>
                                    </td>
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd;">
                                        <span t-field="doc.car_id.x_studio_engine_size"/>
                                        <t t-if="not doc.car_id.x_studio_engine_size">&#160;</t>
                                    </td>
                                    <td style="padding: 8px; border-bottom: 1px solid #ddd; text-align: right;">
                                        <span t-field="line.price_unit"/>
                                        <t t-if="not line.price_unit">&#160;</t>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="4" style="border: none;">&#160;</td>
                                    <td style="padding: 8px; text-align: right; font-weight: bold;">Balance :</td>
                                    <td style="padding: 8px; text-align: right;">
<!--                                        <span t-field="doc.currency_id.symbol"/>-->
                                        <span t-field="doc.x_studio_related_field_4is_1ijgac036"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="4" style="border: none;">&#160;</td>
                                    <td style="padding: 8px; text-align: right; font-weight: bold;">Total Amount :</td>
                                    <td style="padding: 8px; text-align: right;">
<!--                                        <span t-field="doc.currency_id.symbol"/>-->
                                        <span t-field="doc.amount_total"/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Bank Details -->
                    <div class="mt-4">
                        <table style="width: 100%; border-collapse: collapse;">
                            <tr>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>Name:</strong> Ltd Novcom
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>Tax ID:</strong> 404535614
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>Bank:</strong> JSC "TBC Bank"
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>Bank:</strong> JSC "Bank of Georgia"
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>Bank Code:</strong> TBCBGE22
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>Bank Code:</strong> BAGAGE22
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>IBAN:</strong> GE42TB7364236020100014
                                </td>
                                <td style="padding: 8px; border: 1px solid #ddd;">
                                    <strong>IBAN:</strong> GE54BG0000000580810424
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Signatures -->
                    <div class="row mt-4">
                        <div class="col">Client ----------</div>
                        <div class="col text-right">Service Provider ----------</div>
                    </div>

                    <!-- Footer -->
                    <div class="footer text-center">
                        <p>Peugeot Georgia team thanks you for choosing Peugeot</p>
                        <p>Agmashenebeli Ave. 100, 0131 Tbilisi | Georgia +995 (32) 2 19 21 95, info@peugeot-georgia.ge</p>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
