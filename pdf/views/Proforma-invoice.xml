<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_proforma_invoice_geo">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <style>
                        body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
                        .page { margin: 0; padding: 0; }
                        .invoice-container { width: 100%; margin: 0; padding: 0; }
                        .invoice-title { text-align: center; margin-bottom: 15px; }
                        .invoice-label { font-size: 16px; font-weight: bold; }
                        .info-row { display: flex; justify-content: space-between; margin-bottom: 20px; }
                        .customer-info { text-align: left; flex: 1; }
                        .invoice-info { text-align: right; flex: 1; }
                        .label { font-weight: bold; }
                        .section-title { font-weight: bold; display: block; margin-bottom: 5px; }
                        .table-title { font-weight: bold; margin: 15px 0 5px 0; display: block; }
                        table { width: 100%; margin-bottom: 15px; border-collapse: collapse; font-size: 12px; border: none; }
                        th { background-color: #f2f2f2; padding: 8px; text-align: left; border: none; border-bottom: 1px solid #ddd; }
                        td { padding: 8px; border: none; }
                        .total-section { margin: 15px 0; font-size: 12px; text-align: right; }
                        .footer-container { text-align: center; font-size: 12px; margin-top: 30px; }
                        .thank-you-message { font-size: 14px; margin-bottom: 5px; }
                        .company-info { font-size: 12px; }
                        table, th, td {
                            border: none !important;
                        }
                          .signature-box {
                            width: 30%;
                            text-align: center;
                        }
                        .signature-line {
                            margin-top: 20px;
                            border-top: 1px solid #000;
                            padding-top: 5px;
                        }
                    </style>

                    <div class="invoice-container">
                        <div class="header text-center">
                            <img src="/pdf/static/description/Peugeot-Logo.png" style="max-width: 100px;"/>
                            <h3>PEUGEOT GEORGIA</h3>
                        </div>

                        <div class="invoice-title">
                            <span class="invoice-label">ჩეკი-გადაცემის აქტია</span>
                        </div>

                        <div class="info-row">
                             <div class="invoice-info">
                                <div><span class="label">თარიღი:</span> <span t-field="doc.date_order"/></div>
                                <div><span class="label">ნომერი:</span> <span t-field="doc.name"/></div>
                            </div>
                            <div class="customer-info">
                                <span class="section-title">ყიდულობს:</span>
                                <div><span class="label">სახელი:</span> <span t-field="doc.partner_id.name"/></div>
                                <div><span class="label">VAT ნომერი:</span> <span t-field="doc.partner_id.vat"/></div>
                                <div><span class="label">მისამართი:</span> <span t-field="doc.partner_id.street"/></div>
                                <div><span class="label">ტელეფონის ნომერი:</span> <span t-field="doc.partner_id.phone"/></div>
                            </div>
                        </div>

                        <!-- ავტომობილების მაგიდა -->
                        <span class="table-title">ავტომობილის ინფორმაცია</span>
                        <table>
                            <thead>
                                <tr>
                                    <th>ავტომობილის მოდელი</th>
                                    <th>VIN კოდი</th>
                                    <th>მილაჟი</th>
                                    <th>სახელობარი ნომერი</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td style="border:none;"><span t-field="doc.car_id.model_id.name"/></td>
                                    <td style="border:none;"><span t-field="doc.car_id.vin_sn"/></td>
                                    <td style="border:none;"><span t-field="doc.car_id.odometer"/></td>
                                    <td style="border:none;"><span t-field="doc.car_id.license_plate"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- მომსახურების მაგიდა -->
                        <span class="table-title">მომსახურება</span>
                        <table>
                            <thead>
                                <tr>
                                    <th>N</th>
                                    <th>მომსახურების სახელი</th>
                                    <th>რაოდენობა</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line.filtered(lambda l: l.product_id.type == 'service')" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-if="line.sequence" t-field="line.sequence"/>
                                            <span t-if="not line.sequence"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.product_id.name" t-field="line.product_id.name"/>
                                            <span t-if="not line.product_id.name"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.price_subtotal" t-field="line.price_subtotal"/>
                                            <span t-if="not line.price_subtotal"> </span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- ნაწილების მაგიდა -->
                        <span class="table-title">ნაწილები</span>
                        <table>
                            <thead>
                                <tr>
                                    <th>N</th>
                                    <th>ნაწილების ნომერი</th>
                                    <th>ნაწილების სახელი</th>
                                    <th>ერთეული ფასი</th>
                                    <th>რაოდენობა</th>
                                    <th>რაოდენობა</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line.filtered(lambda l: l.product_id.categ_id.name == 'სათადარიგო ნაწილები')" t-as="line">
                                    <tr>
                                        <td>
                                            <span t-if="line.sequence" t-field="line.sequence"/>
                                            <span t-if="not line.sequence"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.product_id.default_code" t-field="line.product_id.default_code"/>
                                            <span t-if="not line.product_id.default_code"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.product_id.name" t-field="line.product_id.name"/>
                                            <span t-if="not line.product_id.name"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.price_unit" t-field="line.price_unit"/>
                                            <span t-if="not line.price_unit"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.product_uom_qty" t-field="line.product_uom_qty"/>
                                            <span t-if="not line.product_uom_qty"> </span>
                                        </td>
                                        <td>
                                            <span t-if="line.price_subtotal" t-field="line.price_subtotal"/>
                                            <span t-if="not line.price_subtotal"> </span>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="total-section">
                            <div>
                                <span class="label">მუშაობის ღირებულება:</span>
                                <span t-esc="sum(doc.order_line.filtered(lambda l: l.product_id.type == 'service').mapped('price_subtotal'))"/>
                            </div>
                            <div>
                                <span class="label">სათადარიგო ნაწილების ღირებულება:</span>
                                <span t-esc="sum(doc.order_line.filtered(lambda l: l.product_id.type == 'product').mapped('price_subtotal'))"/>
                            </div>
                            <div><span class="label">მთლიანი თანხა:</span> <span t-field="doc.amount_total"/></div>
                            <div><span class="label">გადახდა წინასწარ:</span> <span t-field="doc.x_studio_related_field_4is_1ijgac036"/></div>
                        </div>
                        <hr/>
                        <div class="bank-details">
                            <table>
                                <tbody>
                                    <tr>
                                        <td><span class="label">სახელი:</span> Ltd Novcom</td>
                                        <td><span class="label">ვატ ნომერი:</span> 404535614</td>
                                    </tr>
                                    <tr>
                                        <td><span class="label">ბანკი:</span> JSC "TBC ბანკი"</td>
                                        <td><span class="label">ბანკი:</span> JSC "საქართველოს ბანკი"</td>
                                    </tr>
                                    <tr>
                                        <td><span class="label">ბანკის კოდი:</span> TBCBGE22</td>
                                        <td><span class="label">ბანკის კოდი:</span> BAGAGE22</td>
                                    </tr>
                                    <tr>
                                        <td><span class="label">IBAN:</span> GE42TB7364236020100014</td>
                                        <td><span class="label">IBAN:</span> GE54BG0000000580810424</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div style="display:flex;justify-content:space-around;width:100%;">
                            <div class="signature-box">
                                <div class="signature-line">ყიდულობს</div>
                            </div>
                            <div class="signature-box">
                                <div class="signature-line">პასუხისმგებელი</div>
                            </div>
                        </div>
                        <div class="footer-container">
                            <div class="thank-you-message">Peugeot Georgia გუნდი მადლობას გიხდით Peugeot-ის არჩევისათვის</div>
                            <hr/>
                            <div class="company-info">აგმაშენებლის ქ. 100, 0131 თბილისი | საქართველო +995 (32) 2 19 21 95, info@peugeot-georgia.ge</div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
