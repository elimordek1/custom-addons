<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_proforma_invoice_eng">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <style>
                        body { font-family: Arial, sans-serif; margin: 0; padding: 0; }
                        .page { margin: 0; padding: 0; }
                        .invoice-container { width: 100%; margin: 0; padding: 0; }
                        .invoice-title { text-align: center; margin-bottom: 15px; }
                        .invoice-label { font-size: 16px; font-weight: bold; }
                        .info-row { display: flex; justify-content: space-between; margin-bottom: 20px; }
                        .customer-info { text-align: left; flex: 1; }
                        .invoice-info { text-align: right; flex: 1; }
                        .label { font-weight: bold; }
                        .section-title { font-weight: bold; display: block; margin-bottom: 5px; }
                        .table-title { font-weight: bold; margin: 15px 0 5px 0; display: block; }
                        table { width: 100%; margin-bottom: 15px; border-collapse: collapse; font-size: 12px; border: none; }
                        th { background-color: #f2f2f2; padding: 8px; text-align: left; border-bottom: 1px solid #ddd; }
                        td { padding: 8px; }
                        .total-section { margin: 15px 0; font-size: 12px; text-align: right; }
                        .signatures { display: flex; justify-content: space-between; margin: 30px 0 20px 0; font-size: 12px; }
                        .footer-container { text-align: center; font-size: 12px; margin-top: 30px; }
                        .buyer-divider { width: 100%; max-width: 90%; margin: 10px 0; border-top: 2px solid #000; }
                        .centered-divider { width: 50%; margin: 10px auto; border-top: 2px solid #000; }
                    </style>

                    <div class="invoice-container">
                        <div class="header text-center">
                            <img src="/pdf/static/description/Peugeot-Logo.png" style="max-width: 100px;"/>
                            <h3>PEUGEOT GEORGIA</h3>
                        </div>

                        <div class="invoice-title">
                            <span class="invoice-label">Receipt-Delivery Act</span>
                        </div>

                        <div class="info-row">
                            <div class="invoice-info">
                                <div><span class="label">Date:</span> <span t-field="doc.date_order"/></div>
                                <div><span class="label">Number:</span> <span t-field="doc.name"/></div>
                            </div>
                            <div class="customer-info">
                                <span class="section-title">Buyer:</span>
                                <div><span class="label">Name:</span> <span t-field="doc.partner_id.name"/></div>
                                <div><span class="label">VAT No:</span> <span t-field="doc.partner_id.vat"/></div>
                                <div><span class="label">Address:</span> <span t-field="doc.partner_id.street"/></div>
                                <div><span class="label">Phone Number:</span> <span t-field="doc.partner_id.phone"/></div>
                                <div class="buyer-divider"></div>
                            </div>
                        </div>

                        <span class="table-title">Service</span>
                        <table>
                            <thead>
                                <tr>
                                    <th>N</th>
                                    <th>Name of the Service</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.order_line.filtered(lambda l: l.product_id.type == 'service')" t-as="line">
                                    <tr>
                                        <td t-field="line.sequence"/>
                                        <td t-field="line.product_id.name"/>
                                        <td t-field="line.price_subtotal"/>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="total-section">
                            <div>
                                <span class="label">Total Service Price:</span>
                                <span t-esc="sum(doc.order_line.filtered(lambda l: l.product_id.type == 'service').mapped('price_subtotal'))"/>
                            </div>
                        </div>

                        <div class="total-section">
                            <div><span class="label">Total Amount:</span> <span t-field="doc.amount_total"/></div>
                            <div><span class="label">Advance:</span> <span t-field="doc.x_studio_related_field_4is_1ijgac036"/></div>
                            <div class="centered-divider"></div>
                        </div>

                        <div class="signatures">
                            <div>Client ----------</div>
                            <div>Service Provider ----------</div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
