<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_proforma_invoice_eng">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.basic_layout">
                    <head>
                        <style>
                            @import url('https://fonts.googleapis.com/css2?family=BPG+Arial&display=swap');

                            body {
                                font-family: 'BPG Arial', Arial, sans-serif;
                                margin: 0;
                                padding: 20px;
                                color: #333;
                            }

                            .invoice-container {
                                width: 100%;
                                max-width: 800px;
                                margin: 0 auto;
                                padding: 20px;
                                box-sizing: border-box;
                            }

                            .invoice-header {
                                text-align: right;
                                margin-bottom: 30px;
                            }

                            .logo-img {
                                max-width: 150px;
                                float: right;
                            }

                            .title {
                                font-size: 18px;
                                color: #1f1f1f;
                                margin-bottom: 30px;
                                text-align: center;
                                clear: both;
                            }

                            .main-info {
                                margin-bottom: 30px;
                                position: relative;
                            }

                            .date-section {
                                float: right;
                                text-align: right;
                                font-size: 14px;
                            }

                            .customer-info {
                                margin-bottom: 30px;
                                font-size: 14px;
                                line-height: 1.6;
                            }

                            .buyer {
                                border-bottom: 1px solid black;
                                width: 195px;
                                display: inline-block;
                            }

                            .vehicle-table {
                                width: 100%;
                                border-collapse: collapse;
                                margin-bottom: 30px;
                                font-size: 14px;
                            }

                            .vehicle-table td {
                                padding: 8px;
                                border-bottom: 1px solid #000;
                            }

                            .vehicle-table tr:first-child td {
                                border-bottom: 2px solid #000;
                            }

                            .parts-table {
                                width: 100%;
                                margin-bottom: 30px;
                                border-collapse: collapse;
                                font-size: 13px;
                            }

                            .parts-table td, .parts-table th {
                                padding: 4px 8px;
                                text-align: left;
                                border: none;
                            }

                            .service-total {
                                border-top: 1px solid #000;
                                text-align: right;
                                padding: 10px 0;
                            }

                            .bank-details {
                                margin: 40px 0;
                                border-top: 1px solid #000;
                                padding-top: 20px;
                            }

                            .bank-info {
                                width: 100%;
                                font-size: 13px;
                            }

                            .signatures {
                                display: flex;
                                justify-content: space-between;
                                margin: 40px 0;
                                font-size: 13px;
                                text-align: center;
                            }

                            .signature-line {
                                border-bottom: 1px solid #000;
                                width: 200px;
                                margin-top: 30px;
                            }

                            .footer-container {
                                text-align: center;
                                margin-top: 40px;
                                font-size: 13px;
                                color: #666;
                                border-top: 1px solid #ccc;
                                padding-top: 20px;
                            }
                        </style>
                    </head>
                    <div class="invoice-container">
                        <div class="invoice-header">
                            <img class="logo-img" t-att-src="'/pdf/static/description/Peugeot-Logo.png'" alt="Peugeot Georgia"/>
                        </div>

                        <div class="title">
                            <span class="invoice-label">Receipt-Delivery Act</span>
                        </div>

                        <div class="main-info">
                            <div class="date-section">
                                <div><span class="label">Date:</span> <span t-field="doc.date_order"/></div>
                                <div><span class="label">Number:</span> <span t-field="doc.name"/></div>
                            </div>

                            <div class="customer-info">
                                <div class="buyer"><span class="label">Name:</span> <span t-field="doc.partner_id.name"/></div>
                                <div><span class="label">VAT No:</span> <span t-field="doc.partner_id.vat"/></div>
                                <div><span class="label">Address:</span> <span t-field="doc.partner_id.street"/></div>
                                <div><span class="label">Phone Number:</span> <span t-field="doc.partner_id.phone"/></div>
                            </div>
                        </div>

                        <table class="vehicle-table">
                            <tr>
                                <td>Automobile Model</td>
                                <td>VIN Code</td>
                                <td>Mileage</td>
                                <td>State Number</td>
                            </tr>
                            <tr t-foreach="doc.order_line" t-as="line">
                                <td><span t-field="line.product_id.name"/></td>
                                <td><span t-field="line.product_id.default_code"/></td>
                                <td style="color: #FF0000; font-weight: bold;">Mileage</td>
                                <td>State Number</td>
                            </tr>
                        </table>

                        <table class="parts-table">
                            <thead>
                                <tr>
                                    <th>N</th>
                                    <th>Part Number</th>
                                    <th>Name of the spare part</th>
                                    <th>Unit Price</th>
                                    <th>Quantity</th>
                                    <th>Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="doc.order_line" t-as="line">
                                    <td><span t-if="line.sequence" t-field="line.sequence"/></td>
                                    <td><span t-if="line.product_id.default_code" t-field="line.product_id.default_code"/></td>
                                    <td><span t-if="line.product_id.name" t-field="line.product_id.name"/></td>
                                    <td style="text-align: right;"><span t-if="line.price_unit" t-field="line.price_unit"/></td>
                                    <td style="text-align: right;"><span t-if="line.product_uom_qty" t-field="line.product_uom_qty"/></td>
                                    <td style="text-align: right;"><span t-if="line.price_subtotal" t-field="line.price_subtotal"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="total-section">
                            <div style="text-align: right;">
                                <div><span class="label">Cost of Work:</span> <span t-field="doc.amount_total"/></div>
                                <div><span class="label">Cost of Spare Parts:</span> <span/></div>
                                <div><span class="label">Total Amount:</span> <span t-field="doc.amount_total"/></div>
                                <div><span class="label">Advance:</span> <span/></div>
                            </div>
                        </div>

                        <div class="bank-details">
                            <table class="bank-info">
                                <tr>
                                    <td><span class="label">Name:</span> Ltd Novcom</td>
                                    <td><span class="label">Tax ID:</span> 404535614</td>
                                </tr>
                                <tr>
                                    <td><span class="label">Bank:</span> JSC "TBC Bank"</td>
                                    <td><span class="label">Bank:</span> JSC "Bank of Georgia"</td>
                                </tr>
                                <tr>
                                    <td><span class="label">Bank Code:</span> TBCBGE22</td>
                                    <td><span class="label">Bank Code:</span> BAGAGE22</td>
                                </tr>
                                <tr>
                                    <td><span class="label">IBAN:</span> GE42TB7364236020100014</td>
                                    <td><span class="label">IBAN:</span> GE54BG0000000580810424</td>
                                </tr>
                            </table>
                        </div>

                        <div class="signatures">
                            <div>
                                Client
                                <div class="signature-line"></div>
                            </div>
                            <div>
                                Service Provider
                                <div class="signature-line"></div>
                            </div>
                        </div>

                        <div class="footer-container">
                            <div class="thank-you-message">Peugeot Georgia team thanks you for choosing Peugeot</div>
                            <div class="company-info">Agmashenebeli Ave. 100, 0131 Tbilisi | Georgia +995 (32) 2 19 21 95, info@peugeot-georgia.ge</div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>