<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_inherit_vehicle" model="ir.ui.view">
        <field name="name">product.template.form.inherit.vehicle</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Vehicle Information" name="vehicle_info">
                    <group>
                        <group>
                            <field name="vin_code"/>
                            <field name="manufacture_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Vehicle Models">
                            <field name="vehicle_model_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Colors">
                            <group>
                                <field name="exterior_color_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                                <field name="exterior_color_eng_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Engine">
                            <field name="engine_volume_ids">
                                <tree editable="bottom">
                                    <field name="volume"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </page>
            </notebook>
        </field>
    </record>
</odoo>