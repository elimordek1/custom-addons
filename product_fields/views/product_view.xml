<odoo>
    <record id="view_product_form_inherit_extra_fields" model="ir.ui.view">
        <field name="name">product.template.form.inherit.extra.fields</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Additional Data">
                    <group>
                        <field name="vin_code"/>
                    </group>
                    <group string="Car Models">
                        <field name="car_model_ids">
                            <tree editable="bottom">
                                <field name="model_name"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Engine Capacities">
                        <field name="engine_capacity_ids">
                            <tree editable="bottom">
                                <field name="engine_capacity"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Exterior Colors">
                        <field name="exterior_color_ids">
                            <tree editable="bottom">
                                <field name="exterior_color"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Exterior Colors (English)">
                        <field name="exterior_color_eng_ids">
                            <tree editable="bottom">
                                <field name="exterior_color_eng"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Manufacture Years">
                        <field name="manufacture_year_ids">
                            <tree editable="bottom">
                                <field name="year_of_manufacture"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>